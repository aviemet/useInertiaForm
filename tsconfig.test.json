{
  "compilerOptions": {
    "target": "ESNext",
    "module": "esnext",
    "lib": [
      "dom",
      "esnext"
    ],
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "noEmit": true,
    "noEmitOnError": false,
    "outDir": "dist",
    "strict": false,
    "strictNullChecks": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types",
    ],
  },
  "include": [
    "src"
  ],
}